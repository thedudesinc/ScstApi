// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model teamkills {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  matchId          Int // foreign key to Matches table
  offender         String
  victim           String
  offenderOperator String
  victimOperator   String
  offenderKD       String
  victimKD         String
  round            Int
}

model matches {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  gameMatchId  String
  owMatchId    String
  gameMode     String
  map          String
  roundsPlayed Int
  blueScore    Int
  orangeScore  Int
}

model players {
  id        Int @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  matchId   Int // foreign key to Matches table
  name      String
  team      String
  operator  String
  kills     Int
  headshots Int
  deaths    Int
  score     Int
  defuser   Int
}